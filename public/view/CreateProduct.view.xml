<mvc:View
	controllerName="ui5bp.controller.CreateProduct"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml">
 <Page id="idProductPage" title="Artikel bearbeiten"  showNavButton="true" navButtonPress="onBack">
	 <headerContent>
		 <Button icon="sap-icon://home" press="toLaunchpad"></Button>
	 </headerContent>

	 <footer>
		 <Bar>
			 <contentRight>
				 <Button id="checkButton"  text="Bearbeiten" type="Emphasized" visible="true" press="handleCheckPress" />
				 <Button id="saveButton"   text="Speichern" type="Accept" visible="false" press="handleSavePress" />
				 <Button id="cancelButton" text="Abbrechen" type="Reject" visible="false" press="handleCancelPress" />
			 </contentRight>
		 </Bar>
	 </footer>
 </Page>
</mvc:View>
